    .h2 {
      font-size: 1.8rem;
      font-weight: bold;
      margin-top: 30px;
      margin-bottom: 10px;
      color: #333;
    }

    .strong {
      font-weight: bold;
      color: #082f56;
    }

    .center-text {
      text-align: center;
    }

    ul {
      list-style-type: disc;
      margin-left: 20px;
    }

    li {
      margin-bottom: 10px;
    }

    .btn {
      background-color: #082f56;
      color: #fff;
